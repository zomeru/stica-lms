{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**"]
    },
    "build:lms": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**"]
    },
    "build:admin": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**"]
    },
    "start": { "outputs": [] },
    "start:lms": { "outputs": [] },
    "start:admin": { "outputs": [] },
    "lint": { "outputs": [] },
    "dev": { "cache": false },
    "clean": { "cache": false }
  },
  "globalDependencies": [".env", ".env.*"]
}
